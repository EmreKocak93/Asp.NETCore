@using CoreDemo.Controllers
@model List<Class1> 

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayot.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adı Soyadı</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach(var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Name</td>
            <td><a href="/EmployeeTest/DeleteEmployee/@x.ID/" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/EmployeeTest/EditEmployee/@x.ID/" class="btn btn-outline-success">Düzenle</a></td>   
        </tr>
    }
</table>
<a href="/EmployeeTest/AddEmployee/" class="btn btn-outline-primary">Yeni Çalışan Girişi</a> 

