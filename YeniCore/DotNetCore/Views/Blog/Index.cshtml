@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
	<section class="main-content-w3layouts-agileits">
		<div class="container">
			<h3 class="tittle">Bloglar</h3>
			<div class="inner-sec">
				<!--left-->
				<div class="left-blog-info-w3layouts-agileits text-left">
					<div class="row">
					@foreach(var x in Model)
					{		 
					<div class="col-lg-4 card">
							<a href="single.html">
								<img src="@x.BlogImage" class="card-img-top img-fluid" alt="">
							</a>
							<div class="card-body">
								<ul class="blog-icons my-4">
									<li>
										<a href="#">
											<i class="far fa-calendar-alt"></i>@(((DateTime)x.BlogCreateDate).ToString("dd-MM-yyyy"))
										</a>
									</li>
									<li class="mx-2">
										<a href="#">
											<i class="far fa-comment"></i> 0
										</a>
									</li>
									<li>
										<a href="#">
											<i class="fas fa-eye"></i>@x.Category.CategoryName
										</a>
									</li>

								</ul>
								<h5 class="card-title ">
									<a href="/Blog/BlogReadAll/@x.BlogID/">@x.BlogTitle</a>s
								</h5>
								@{
									string contentPreview =x.BlogContent;
									if (!string.IsNullOrEmpty(contentPreview) && contentPreview.Length > 10)
									{
										int lastIndex = contentPreview.Substring(0, 10).LastIndexOf(" ");
										lastIndex = lastIndex == -1 ? 10 : lastIndex;
										contentPreview = contentPreview.Substring(0, lastIndex) + "...";
									}
								}
								<p class="card-text mb-3">@contentPreview</p>
								<a href="/Blog/BlogReadAll/@x.BlogID/" class="btn btn-primary read-m">Devamını Oku</a>
							</div>
						</div>
					}
					</div>
					<!--//left-->
				</div>
			</div>
		</div>
	</section>


