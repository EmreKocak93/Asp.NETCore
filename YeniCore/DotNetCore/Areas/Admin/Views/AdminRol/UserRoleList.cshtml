@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/AdminLayot.cshtml";
}

<h1>Kullanıcı Rol Listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>Kullanıcı</th>
        <th>Rol Ata</th>
    </tr>
    @foreach(var x in Model)
    { 
        <tr>
            <td>@x.UserName</td>
            <td><a href="/Admin/AdminRol/AssignRole/@x.Id" class="btn btn-outline-warning">Rol Ata</a></td>
        </tr>
    }
</table>
<a href="/Admin/AdminRol/Index/" class="btn-primary">Rol Listesine Dön</a>

